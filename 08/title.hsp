#include "hsp3cl.as"
#include "hspcurl.as"
#include "htmlparser.as"

; 友達のIPアドレス
friend_ip = "127.0.0.1"
; 友達のポート番号 
friend_port = 3000
;ダウンロードするウェブページのURL
url = friend_ip + ":" + friend_port + "/index.html"

; urlで指定したウェブサイトのHTMLを取得してbuf変数へいれる
curl url, buf
; buf変数内のtitleタグを探してbufを上書き
htmltag buf, "title", buf
; buf変数を表示
mes buf
; タグ(<title>,</title>)を取り除いてテキストのみにしてbufを上書き
htmluntag buf, buf
; buf変数を表示
mes buf
; プログラム終了
end

