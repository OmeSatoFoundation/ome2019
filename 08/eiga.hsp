#include "hsp3cl.as"
#include "hspcurl.as"
#include "htmlparser.as"

; 結果を入れる配列
sdim result, 32, 128
; ダウンロードするウェブページのURLを指定
url = "https://eiga.com/ranking/"

; curlでURLで指定されるファイルをダウンロードしてbufに入れる　
curl url, buf
; bufから<h2 class="title">...</h2>を探して、結果をbufに入れる
htmltagattr buf, "h2", "class:title", buf
; buf内の<>をすべて外して, 結果をbufに入れる
htmluntag buf, buf
; 改行でbufを区切って結果をresult配列へ入れる
splitnl buf, result

; トップ5を出力
repeat 5
	mes str(cnt+1) + "位 " + result(cnt)
loop

; プログラムの終了
end
