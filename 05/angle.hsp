#include "hsp3dish.as"
#include "rpz-gpio.as"

celload("alice.png"),2
celload("neko.png"),3
p = 50

spiopen 0

*main
	data = spiget(1,0)
	p = rasp_map(data, 0, 1023, 0, 440)

	redraw 0
	pos 20,20
	mes data
	mes p
	color 0,0,0
	pos p,100
	celput 2
	pos 440-p,300
	celput 3
	redraw 1

	wait 10	
	goto *main

spiclose 0