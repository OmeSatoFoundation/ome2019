#include "hsp3dish.as"
#include "rpz-gpio.as"

spiopen 0

*main

	data = spiget(2,0)
	volt = rasp_map(data, 0, 1023, 0, 5000)
	kyori = rasp_map(volt, 3200, 500, 5, 80)
	kyori2 = (data/36)+(845/9)
	res = "距離 : "+kyori+" "+kyori2
	
	redraw 0
	font "",20
	pos 30,30
	mes res
	redraw 1

	wait 100
	goto *main

spiclose 0