#include "hsp3cl.as"
	adrs="127.0.0.1"
	port=12222
	sockmake 0, port
	if stat : mes "socket error "+stat : goto *failed
	a=0
	repeat
	sockwait 0
	if stat > 1 : mes "socket error "+stat : goto *failed
	if stat = 0 : break
	a+
	wait 10
	loop
	mes "connected"
	wait 100
	msg="hello"
	sockput msg
	if stat : mes "socket error "+stat : goto *failed
	mes "sent "+msg
*failed
	sockclose 0
	stop
